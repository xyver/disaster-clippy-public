# Copy this to .env and fill in your values

# Embedding mode: openai or local
# - openai: Uses OpenAI API (costs money but high quality)
# - local: Uses sentence-transformers (free, runs on your machine)
#   Requires: pip install sentence-transformers
EMBEDDING_MODE=local

# OpenAI API key (only needed if EMBEDDING_MODE=openai)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (for chat LLM - optional, can use OpenAI instead)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Pinecone (for cloud vector database)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=disaster-clippy-prod

# Vector DB mode: local, pinecone, qdrant
VECTOR_DB_MODE=local

# LLM provider: openai, anthropic
LLM_PROVIDER=openai

# Admin API key (for protected endpoints)
ADMIN_API_KEY=your_admin_key_here

# Offline backups storage path (for ZIM files and website mirrors)
# Set this to an external drive or large storage location
# Leave empty to disable local backups feature
BACKUP_PATH=
